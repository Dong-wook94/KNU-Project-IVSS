<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_detail_info"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context=".DetailInfoActivity">


    <ImageView
        android:src="@drawable/ic_violencenotify"
        android:id="@+id/notifyImage"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <TextView
        android:textSize="10pt"
        android:textAlignment="center"
        android:text="폭력이 발생하였습니다!"
        android:id="@+id/detectText"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/violenceImage"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#00FF0000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/dscText"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


    <Button
        android:text="교육기관 전화하기"
        android:id="@+id/callButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_call_black_24dp" />




</LinearLayout>